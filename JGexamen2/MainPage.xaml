<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JGexamen2.MainPage">

    <Grid Padding="10" RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*">
        <Entry x:Name="JGInputEntry" Placeholder="Ingrese valor" Grid.Row="0" Grid.ColumnSpan="2"/>
        <Picker x:Name="JGFromUnitPicker" Title="De" Grid.Row="1" Grid.Column="0">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Libras</x:String>
                    <x:String>Kilogramos</x:String>
                    <x:String>Onzas</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Picker x:Name="JGToUnitPicker" Title="A" Grid.Row="1" Grid.Column="1">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Libras</x:String>
                    <x:String>Kilogramos</x:String>
                    <x:String>Onzas</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button x:Name="JGConvertButton" Text="Convertir" Clicked="JGOnConvertClicked" Grid.Row="2" Grid.ColumnSpan="2"/>
        <Label x:Name="JGResultLabel" Text="Resultado" Grid.Row="3" Grid.ColumnSpan="2" FontAttributes="Bold"/>
    </Grid>
</ContentPage>
